record(longout, "${UUT}:MODE:TRANSIENT") {
	field(DTYP, "stream")	
	field(DESC, "set transient samples")
	field(EGU,  "Samples")
	field(LOPR, "0")
	field(HOPR, "1")	
	field(OUT,  "@mb.proto setTransient(${UUT}:MODE:TRANSIENT) ${SPORT}")
}

