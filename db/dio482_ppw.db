record(calcout, "${UUT}:${SITE}:${ch}:_ppwt") {
	field(INPA, "${UUT}:${SITE}:PPW:${ch}:TRG")
	field(INPB, "${UUT}:${SITE}:PPW:${ch}:TRG:DX")
	field(INPC, "${UUT}:${SITE}:PPW:${ch}:TRG:SENSE")
	field(CALC, "0")
	field(DTYP, "stream")
# refuse to update in the RUN state	
	field(SDIS, "${UUT}:${SITE}:RUN")
	field(DISV, "1")
	field(OUT,  "@signal.proto setSig(ppw_trg${ch}) ${SPORT}")
}

