# dio482_ppwt.db 

record(mbbo, "${UUT}:${SITE}:PPW:${ch}:TRG") {
	field(DTYP, "Soft Channel")
	field(DESC, "configure PPW ${ch} trigger")
	field(NOBT, "2")
	field(ZRST, "TRG_BUS")
	field(ONST, "IM_BUS")
	field(TWST, "TRG_BUS")
	field(THST, "CUSTOM")
	field(FLNK, "${UUT}:${SITE}:PPW:${ch}:TRG:w PP")	
}

#http://www.aps.anl.gov/epics/tech-talk/2010/msg00131.php
# rgm   : setpoint
# rgm:r : readback
# rgm:s : sync
# rgm:w : write
# added twist, all 3 writes get muxed together in :_ppwt
# while we could disable DX, SENSE when set==0, better effect doing this on 
# the gui. The driver driver will reject attempts to set 0,X,X where X!=0

record(mbbi, "${UUT}:${SITE}:PPW:${ch}:TRG:r") {
	field(DTYP, "stream")
	field(INP,  "@signal.proto getSig(ppw_trg${ch}) ${SPORT}")
	field(SCAN, "1 second")
	field(PINI, "YES")
	field(FLNK, "${UUT}:${SITE}:PPW:${ch}:TRG:s")
}
record(mbbo, "${UUT}:${SITE}:PPW:${ch}:TRG:s") {
	field(DTYP, "Soft Channel")
	field(DOL,  "${UUT}:${SITE}:PPW:${ch}:TRG:r NPP")
	field(OMSL, "closed_loop")
	field(OUT,  "${UUT}:${SITE}:PPW:${ch}:TRG PP")
}

record(mbbo, "${UUT}:${SITE}:PPW:${ch}:TRG:w") {
	field(DTYP, "Soft Channel")	
	field(FLNK, "${UUT}:${SITE}:${ch}:_ppwt PP")
	field(DISV, "1")
	field(SDIS, "${UUT}:${SITE}:PPW:${ch}:TRG:s.PACT")
}

record(mbbo, "${UUT}:${SITE}:PPW:${ch}:TRG:DX") {
	field(DTYP, "Soft Channel")
