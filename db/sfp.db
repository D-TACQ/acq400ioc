record(ai, "${UUT}:SFP:${PORT}:RXPWR"){
	field(DTYP, "stream")
	field(INP,  "@sfp.proto getRxPwr ${SPORT}")
	field(SCAN, "I/O Intr")	
	field(EGU,   "uW")
	field(FLNK,  "${UUT}:SFP:${PORT}:RXPWR:COUNT PP")
}


record(calc, "${UUT}:SFP:${PORT}:RXPWR:COUNT") {
	field(INPA, "1")
	field(CALC, "VAL+A")
}


