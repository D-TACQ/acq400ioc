record(longout, "${UUT}:${SITE}:JDG:${CH}:WIN:L")
{
	field(DTYP, "asynInt32")
	field(OUT,  "@asyn($(PORT),$(IX),$(TIMEOUT))WINL")
	field(DRVH, "${NSAM}")
	field(DRVL,  "2")
	field(HOPR, "${NSAM}")
	field(LOPR,  "2")	
	field(VAL,   "2")
	field(PINI,  "YES")
}

record(longout, "${UUT}:${SITE}:JDG:${CH}:WIN:R")
{
	field(DTYP, "asynInt32")
	field(OUT,  "@asyn($(PORT),$(IX),$(TIMEOUT))WINR")
	field(DRVH, "${NSAM}")
	field(DRVL,  "2")	
	field(HOPR, "${NSAM}")
	field(LOPR,  "2")
	field(VAL,   "${NSAM}")
	field(PINI,  "YES")	
}

record(bo, "${UUT}:${SITE}:JDG:RESET:WIN")
{
	field(DESC, "Write here to init L/R")
	field(DTYP, "Soft Channel")
}

# uncomment this section if you want the JDG WIN L/R to control the stats as well

record(aSub, "${UUT}:${SITE}:AI:WF:${CH}:V") {	
	field(FTL,  "LONG")
	field(NOL,  "1")
	field(INPL, "${UUT}:${SITE}:JDG:${CH}:WIN:L")
	field(FTM,  "LONG")
	field(NOM,  "1")
	field(INPM, "${UUT}:${SITE}:JDG:${CH}:WIN:R")	
}
