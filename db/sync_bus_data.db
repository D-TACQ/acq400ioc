record (bi, "${UUT}:0:SIG:SYNC_BUS:IN:SYNC") {
	field(DTYP, "biAcqHost")
	field(INP,  "@/dev/acq400.0.knobs/sync_in_sync")
	field(SCAN, "1 second")
	field(FLNK, "${UUT}:0:SIG:SYNC_BUS:IN:TRG")
	field(PINI, "YES")	
}
