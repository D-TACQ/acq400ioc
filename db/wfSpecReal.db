# waveform shows REAL SPECTRUM


record(calc, "${UUT}:0:SIG:CLK_S1:FREQ") {
	field(FLNK, "${UUT}:0:AI:WF:fsfan")
}

record(calc,"${UUT}:${SITE}:AI:WF:01:UPDATES"){
	field(FLNK, "${UUT}:${SITE}:AI:WF:PS:${cid}")
}


record(fanout, "${UUT}:0:AI:WF:fsfan") {
	field(LNK${SITE}, "${UUT}:${SITE}:AI:WF:FS")	
}

record(ao, "${UUT}:AI:WF:PS:SMOO") {
	field(DTYP, "Soft Channel")
	field(PINI, "YES")
	field(VAL,  "0")
	field(DRVH, "1")
	field(DRVL, "0")
	field(EGUL, "0")
	field(EGUF, "1")	
}

record(calc, "${UUT}:${SITE}:AI:WF:FS") {
	field(INPA, "${UUT}:0:SIG:CLK_S${SITE}:FREQ")
	field(INPB, "${DECIM}")
	field(INPC, "${UUT}:${SITE}:AI:WF:FS")
	field(INPD, "${UUT}:${SITE}:AI:WF:FS.LC")
	field(INPK, "0.9")
# decimate filter could set B?	
	field(CALC, "K*D + (1-K)*A/B")
	field(DESC, "DDC Mixer (center) frequency")
}

record(calc, "${UUT}:${SITE}:AI:WF:FMIXER") {
	field(INPA, "0")
	field(DESC, "DDC Mixer (center) frequency")
}

record(aSub, "${UUT}:${SITE}:AI:WF:PS:${cid}") {
	field(SNAM, "spectrum")
# I	
	field(FTA,  "SHORT")
	field(NOA,  "${size}")
	field(INPA, "${UUT}:${SITE}:AI:WF:${cid}")
# Q
	field(FTB,  "SHORT")
	field(NOB,  "${size}")
	field(INPB, "${UUT}:${SITE}:AI:WF:${cid}")	
# Fs
	field(FTC,  "FLOAT")
	field(NOC,  "1")
	field(INPC, "${UUT}:${SITE}:AI:WF:FS")	
# IS CPLX : NO
	field(FTD,  "ULONG")
	field(NOD,  "1")
	field(INPD, "0")
# Attenuation                                 
        field(FTF,  "FLOAT")                  
        field(NOF,  "1")    
        field(INPF, "${ATTEN}")  
        
# SMOOTHING : 0 : no smoothing, 1: infinite
	field(FTS,   "DOUBLE")
	field(NOS,   "1")
	field(INPS,  "${UUT}:AI:WF:PS:SMOO")
	 	
# single sided power spectrum
	field(FTVA, "FLOAT")
	field(NOVA, "${size2}")
	field(DESC, "real PS in polar A=R B=T C=Window")
	
# BINS - 
	field(FTVB, "FLOAT")
	field(NOVB, "${size2}")
#window		
	field(FTVC,  "FLOAT")
	field(NOVC,  "${size}")	
}


