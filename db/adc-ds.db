# common file for delta-sigma adc

record (bo, "${UUT}:${SITE}:ADC_MODE") {
	field(ONAM, "ON")
	field(ZNAM, "OFF")
	field(DESC, "operating mode")
        field(DTYP, "Soft Channel")
        field(VAL,  "0")  
}

record (bo, "${UUT}:${SITE}:HAS_CH_GAINS") {
	field(DESC, "Has Channel Gains")
	field(DTYP, "Soft Channel")
	field(VAL,  "${CHG}")
	field(ZNAM, "0")
	field(ONAM, "1")	
}

record (mbbo, "${UUT}:${SITE}:ADC_CAL") {
        field(DTYP, "Soft Channel")
        field(NOBT, "2")
        field(ZRST, "default")
        field(ONST, "caldef")
        field(TWST, "calibrated")
	field(VAL,  "0")
	field(PINI, "YES")
}
