record(bo, "${UUT}:2:SUM:${AB}:${FUN}_CLR") {
		field(DTYP, "Soft Channel")
        field(ZNAM, "RUN")
        field(ONAM, "HOLD")			
		field(DESC, "Clear ${FUN} input to DAC${AB} SUM")
		field(FLNK, "${UUT}:2:SUM:${AB}:${FUN}_CLR:w")
}

record(bo, "${UUT}:2:SUM:${AB}:${FUN}_CLR:w") {
		field(DTYP, "stream")
		field(OUT,  "@cpsc2.proto set_${fun}_clr(${AB}) ${SPORT}")		
		field(DISV, "1")
		field(SDIS, "${UUT}:2:SUM:${AB}:${FUN}_CLR:s.PACT")
		field(OMSL, "closed_loop")
		field(DOL, "${UUT}:2:SUM:${AB}:${FUN}_CLR PP")
}

record(bi, "${UUT}:2:SUM:${AB}:${FUN}_CLR:r") {
		field(DTYP, "stream")
		field(INP,  "@cpsc2.proto get_${fun}_clr(${AB}) ${SPORT}")
		field(SCAN, "1 second")
		field(FLNK, "${UUT}:2:SUM:${AB}:${FUN}_CLR:s")
} 

record(bo, "${UUT}:2:SUM:${AB}:${FUN}_CLR:s") {
		field(DTYP, "Soft Channel")
		field(DOL,  "${UUT}:2:SUM:${AB}:${FUN}_CLR:r NPP")
		field(OMSL, "closed_loop")
		field(OUT,  "${UUT}:2:SUM:${AB}:${FUN}_CLR PP")
}
