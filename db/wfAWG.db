record(waveform, "${UUT}:AO:AWG:${cid}:V") {
        field(DTYP, "Soft Channel")
        field(NELM, "${size}")
        field(FTVL, "FLOAT")
        field(DESC, "load raw AWG data")
		field(FLNK, "${UUT}:AO:AWG:${cid}:V")
}


record(aSub, "${UUT}:AO:AWG:${cid}:V") {
		field(SNAM, "volts_to_raw_DAC20")

		field(FTA,  "FLOAT")
		field(NOA,  "${size}")
		field(INPA, "${UUT}:${SITE}:AI:WF:${cid}")

		field(FTO, "DOUBLE")
		field(NOO, "1")
#	field(INPO, "${UUT}:${SITE}:AI:CH:${cid}.EOFF")
		field(INPO, "0")

		field(FTS, "DOUBLE")
		field(NOS, "1")
#	field(INPS, "${UUT}:${SITE}:AI:CH:${cid}.ESLO")
		field(INPS, "4.656613e-9")						# 10V/2**31 left justified

		field(FTVA, "LONG")
		field(NOVA, "${size}")
		field(OUTA, "${UUT}:AO:AWG:${cid} PP")

		field(FLNK, "${UUT}:AO:AWG:${cid}")
}

record(waveform, "${UUT}:AO:AWG:${cid}") {
        field(DTYP, "wfAWGAcqHost")
        field(INP,  "@/dev/shm/AWG.${cid} PP")
        field(NELM, "${size}")
        field(FTVL, "${type}")
        field(DESC, "load raw AWG data")
}

