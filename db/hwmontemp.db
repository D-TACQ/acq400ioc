record(ai, "${UUT}:SYS:${lname}:TEMP") {
        field(DTYP, "dsSysfsAi")
        field(INP, "@${pname}")
        field(SCAN, "10 second")
        field(DESC, "Temperature")
        field(ASLO, "${scale}")
        field(ROFF, "${offset}")
        field(LINR, "LINEAR")
        field(EGU,  "C")
        field(PINI, "YES")
        field(HOPR, "99")
        field(LOPR, "0")
        field(HIGH, "55")
        field(HIHI, "75")
        field(LOW,  "-1")
        field(LOLO, "-1")
}
