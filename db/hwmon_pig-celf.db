record(ai, "${UUT}:SYS:${SITE}:_van") {
	field(DTYP, "dsSysfsAi")
	field(INP, "@/dev/hwmon/4/in1") 
	field(SCAN, "5 second")     
	field(DESC, "raw result")
# scale only
	field(ASLO, ".001")
	field(LINR, "LINEAR")
	field(EGU,  "V")
	field(PINI, "YES")
	field(FLNK,  "${UUT}:SYS:${SITE}:VAP")
	field(PREC, "2") 
}

