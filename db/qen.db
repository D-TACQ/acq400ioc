# quadrature encoder


record(longin, "${UUT}:${SITE}:QEN:COUNT") {
	field(DTYP, "stream")
	field(SCAN, ".1 second")
	field(INP,  "@qen.proto read_qen_count ${SPORT}")
	field(FLNK, "${UUT}:${SITE}:QEN:DI4")
}

record(longin, "${UUT}:${SITE}:QEN:DI4") {
	field(DTYP, "stream")
	field(INP,  "@qen.proto di4_mon ${SPORT}")
}

record(longin, "${UUT}:${SITE}:QEN:ZCOUNT") {
	field(DTYP, "stream")
	field(SCAN, ".2 second")
	field(INP,  "@qen.proto read_z_count ${SPORT}")
	field(FLNK, "${UUT}:${SITE}:QEN:ECOUNT")
}

record(longin, "${UUT}:${SITE}:QEN:ECOUNT") {
	field(DTYP, "stream")
	field(INP,  "@qen.proto read_e_count ${SPORT}")
}

record(bo, "${UUT}:${SITE}:QEN:CLR") {
	field(ONAM, "ON")
	field(ZNAM, "OFF")
	field(DESC, "count clear")
	field(DTYP, "stream")
	field(OUT, "@qen.proto clr_qen_count ${SPORT}")
}

record(int64in, "${UUT}:${SITE}:QEN:COUNT64") {
	field(DTYP, "Soft Channel")
	field(VAL,  "8000000000")
	field(PINI,  "YES")
}

record(int64in, "${UUT}:${SITE}:QEN:COUNT64:T") {
	field(DTYP, "asynInt64")
	field(INP,  "@asyn(100,200,300) ${SPORT}")
}
