#!/bin/sh
source /etc/profile.d/epics.sh
SITE=${SITE:-${1:-1}}
NCHAN=$(get.site $SITE NCHAN)
DOFF=5

HN=${IOC_HOST}
eoff=0
noff=0

for ch in $(seq 1 $NCHAN)
do
	CH=$(printf "%02d" $ch)
	caput ${HN}:${SITE}:AI:CH:${CH}.EOFF ${eoff}

	if [ $noff -eq 7 ]; then
		noff=0
		eoff=0
	else
		let noff=$noff+1
		eoff=$(echo $noff $DOFF | awk '{ print $1*$2 }')
	fi
done


